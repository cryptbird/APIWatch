{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@apiwatch/shared": ["../shared/src/index.ts"],
      "@apiwatch/shared/*": ["../shared/src/*"],
      "@apiwatch/plugin": ["../plugin/src/index.ts"],
      "@apiwatch/plugin/*": ["../plugin/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
