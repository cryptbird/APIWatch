# APIWatch environment variables
# Copy to .env and fill in values

# Database (PostgreSQL 15)
DATABASE_URL=postgresql://apiwatch:apiwatch_secret@localhost:5432/apiwatch

# Redis
REDIS_URL=redis://localhost:6379

# Server
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Auth (JWT secret for dashboard / API keys hashing)
JWT_SECRET=your-jwt-secret-min-32-chars
API_KEY_SALT=your-api-key-salt

# Optional: Slack notifications
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=

# Optional: Email (SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=apiwatch@yourorg.com

# Optional: Teams webhook
TEAMS_WEBHOOK_URL=
